<!DOCTYPE html>
<html>
  <head>
    <title>ScoreViewer</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <header>
    <div>
      <span>SCORE VIEWER</span>
      <div>
        <% if logged_in? %>
          Logged in! </br>
          <% if session[:admin] == true %>
            Admin!
          <% else %>
            Not an admin
          <% end %>
          </br>
          Session ID is <%= session[:player_id] %>
          </br>
          <%=link_to "Log Out", logout_path %>
          </br>
          <%= link_to "Player index", players_path %>
          </br>
          <%= link_to "This player's page", Player.find(session[:player_id]) %>
        <% else %>
          NOT LOGGED IN
          </br>
          <%= link_to "Log In", login_path %>
        <% end %>
      </div>
    </div>
    <% if flash[:notice] %>
      <div class="notice"><%= flash[:notice] %></div>
    <% end %>
    </header>
    <%= yield %>
  </body>
</html>
